<Window x:Class="Sms.Test.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sms.Test.Wpf"
        xmlns:vm="clr-namespace:Sms.Test.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Таблица переменных -->
        <DataGrid Grid.Row="0" 
                  ItemsSource="{Binding Variables}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AlternatingRowBackground="#F0F0F0"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0"
                  BorderThickness="1" BorderBrush="Gray">

            <DataGrid.Columns>
                <!-- Имя переменной (ReadOnly) -->
                <DataGridTextColumn Header="Имя переменной" 
                                    Binding="{Binding Name}" 
                                    Width="200" 
                                    IsReadOnly="True" 
                                    FontWeight="Bold"/>

                <!-- Значение (Editable) -->
                <DataGridTextColumn Header="Значение" 
                                    Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Обновить (Сброс)" 
                    Command="{Binding ReloadCommand}" 
                    Width="120" Height="30" Margin="0,0,10,0"/>

            <Button Content="Применить изменения" 
                    Command="{Binding SaveCommand}" 
                    Width="150" Height="30" 
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
